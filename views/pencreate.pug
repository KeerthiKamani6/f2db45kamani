extends layout

block content 
    form(id='penForm', action="/resource/pen", method="POST")
     div.form-group
         label.penAttr(for='style') pen Style
         input#style(type='text', name='style')
     div.form-group
         label.penAttr(for='color') pen Color
         input#color(type='text', name='color')
     div.form-group
         label.penAttr(for='width') pen width
         input#width(type='number', name='width')
     input(type="submit")

   script.
